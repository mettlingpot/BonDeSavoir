{% extends "MPUserBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block MP_tag %}
          
<div class="col-lg-12 black">
<div class="col-lg-offset-1 ">
<ul class="list-inline">
    
    {% for comp in randomList %}
    
        <li class="align-middle t{{ random(4) }} "><a href="{{ path('mp_comp_view', {'id': comp.id}) }}" >{{ comp.name}}</a></li>
    {% endfor %}  
</ul>
</div>

</div>


{% endblock %}  
 
{% block MP_body %}

<h1>competence a partager</h1>
{% for comp in listComp %}
<div class=" col-lg-4 col-md-4">
   <div class="thumbnail">
     <div class="caption">
       {% if comp.name|length > 20 %}
         <h3>{{ comp.name|slice(0, 17) }}...</h3>
       {% else %}
         <h3>{{ comp.name }}</h3>
        {% endif %}
       <p><a href="{{ path('mp_comp_view', {'id': comp.id}) }}" class="btn btn-xs btn-primary" role="button" title="En savoir +">En savoir +</a>
     </div>
   </div>
</div>
{% else %}
    <li>Pas de competences</li>    
{% endfor %}
<div class="row">
  <div class="col-md-12">{% include 'MPCompBundle:Default:pagination.html.twig' %}</div>
</div>
{% endblock %}
